<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.utsa.cs3443.xko141_lab3.MainScreenController"

            prefWidth="700" prefHeight="500">

    <!-- =============== TOP SECTION =============== -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <!-- App Logo -->
            <ImageView fx:id="imgLogo" fitHeight="100" preserveRatio="true">
                <image>
                    <Image url="/edu/utsa/cs3443/xko141_lab3/images/logo.png"/>
                </image>
            </ImageView>

            <!-- App Title -->
            <Label fx:id="lblAppTitle"
                   text="The Global Emergency Response Organization"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;"/>
        </VBox>

    </top>

    <!-- =============== CENTER SECTION =============== -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnListShips" text="List Ships" prefWidth="120"/>
                <Button fx:id="btnGo" text="Go!" prefWidth="120"/>
            </HBox>

            <Label fx:id="lblRegNumber" text="Registration Number:" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtRegistrationNumber" prefRowCount="1" prefWidth="200"/>

            <HBox spacing="10" alignment="CENTER">
                <RadioButton fx:id="rdoFind" text="Find" selected="true"/>
                <RadioButton fx:id="rdoDelete" text="Delete"/>
            </HBox>
        </VBox>

    </center>


    <!-- =============== BOTTOM SECTION =============== -->
    <VBox alignment="CENTER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label text="Â© 2025 Global Emergency Response Organization"
               style="-fx-font-size: 12px; -fx-text-fill: #555555;"/>
    </VBox>

</BorderPane>
